            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/InSituLangmuirProbe">
                <skos:prefLabel xml:lang="en">Langmuir Probe</skos:prefLabel>
                <skos:definition xml:lang="en">An in situ instrument that measures currents and potentials in the system formed by the carrier satellite and electrode(s) placed in the ambient plasma in order to infer plasma characteristics such as density and temperature</skos:definition>
                <dc:date>2013-12-03 05:28:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/InSituSensor"/>
            </skos:Concept>
        </skos:member>

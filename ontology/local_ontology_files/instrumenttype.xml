    <skos:ConceptScheme rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType">
        <skos:prefLabel xml:lang="en">PITHIA Instrument Type</skos:prefLabel>
        <dc:description>This vocabulary describes the type of an instrument (e.g. Radar, Digisonde, ..).</dc:description>
        <dc:date>2013-06-21 21:30:00.0</dc:date>
        <owlxml:versionInfo>0.1</owlxml:versionInfo>
        <dc:publisher>PITHIA</dc:publisher>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/RemoteSensor">
                <skos:prefLabel xml:lang="en">Remote Sensing Instrument</skos:prefLabel>
                <skos:definition xml:lang="en">An instrument that observes properties of phenomena at a distance from the feature of interest without a physical contact, typically by detecting electromagnetic or acoustic radiation emitted or scattered by the feature.</skos:definition>
                <dc:date>2016-01-26 18:38:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/ActiveRemoteSensor"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/PassiveRemoteSensor"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/ActiveRemoteSensor">
                <skos:prefLabel xml:lang="en">Active Remote Sensor</skos:prefLabel>
                <dc:date>2024-12-17 07:30:00.0</dc:date>
                <owlxml:versionInfo>0.2</owlxml:versionInfo>
                <skos:definition xml:lang="en">A remote sensing instrument that emits energy in order to illuminate the feature of interest and then to detect and evaluate the part of radiated energy that was reflected, refracted, attenuated, or scattered by the feature.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/RemoteSensor"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Radar"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Sounder"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/GNSS"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/Radar">
                <skos:prefLabel xml:lang="en">Radar</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">An active remote sensing instrument that uses radio signal to infer range, direction, speed, and other properties of the area that reflected or scattered the signal.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/ActiveRemoteSensor"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/CoherentScatterRadar"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/IncoherentScatterRadar"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/CoherentScatterRadar">
                <skos:prefLabel xml:lang="en">Coherent Scatter Radar</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">A radar whose signal is scattered in a volume at the boundaries of intrinsic irregularities of the refractive index whose spatial scale is comparable to half the signal wavelength and spatial organization forms a constructive interference pattern to support a particular direction of the scatter.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Radar"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/IncoherentScatterRadar">
                <skos:prefLabel xml:lang="en">Incoherent Scatter Radar</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">A radar whose signal is scattered by density fluctuations due to individual charged particles of the plasma, with total scattered power proportional to the number density of particles and broadening and shifting of the Doppler spectrum indicative of the velocity, temperature, and ion composition of the ambient plasma.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Radar"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/Sounder">
                <skos:prefLabel xml:lang="en">Sounder</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">An active remove sensing instrument that uses varying frequency signal to detect and evaluate spectral response of the feature of interest to the sensing signal.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/ActiveRemoteSensor"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Ionosonde"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/Ionosonde">
                <skos:prefLabel xml:lang="en">Ionosonde</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">A sounder operating in the high frequency (HF) band to probe ionospheric plasma by detecting multiple specular reflections of the transmitted signal propagating via different modes from different areas in the plasma.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Sounder"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/VerticalSounder"/>
                <skos:narrower rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/ObliqueSounder"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/VerticalSounder">
                <skos:prefLabel xml:lang="en">Vertical Ionosonde</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">An monostatic ionosonde whose signal specularly reflects from the ionization strata normal to the signal incident angle so that it returns to the ionosonde location for detection, with most of the reflections produced by the horizontal stratum in the vertical direction of signal propagation, but also off vertically from the suitable boundaries of plasma irregularities.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Ionosonde"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/ObliqueSounder">
                <skos:prefLabel xml:lang="en">Oblique Ionosonde</skos:prefLabel>
                <dc:date>2013-06-21 21:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">A bistatic ionosonde with separated time-synchronized transmitter and receiver whose signal travels away from the transmitter site at oblique incidence angle to the ionization layer to refract via the Snell's law and reach the receiver site via one or more hops of propagation.</skos:definition>
                <skos:broader rdf:resource="https://metadata.pithia.eu/ontology/2.2/instrumentType/Ionosonde"/>
            </skos:Concept>
        </skos:member>
        <skos:member>
            <skos:Concept rdf:about="https://metadata.pithia.eu/ontology/2.2/instrumentType/GNSS">
                <skos:prefLabel xml:lang="en">GNSS</skos:prefLabel>
                <dc:date>2024-12-17 07:30:00.0</dc:date>
                <owlxml:versionInfo>0.1</owlxml:versionInfo>
                <skos:definition xml:lang="en">
Global satellite navigation system for geopositioning used as active sensor 
to infer properties of the underlying propagation medium of the GNSS signal.
